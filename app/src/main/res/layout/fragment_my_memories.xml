<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mani.itachi.memories.fragments.MyMemoriesFragment">


    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.widget.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/searchedItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textSize="25sp"
                    android:visibility="gone" />

                <mani.itachi.memories.recyclerviewparts.RecyclerViewEmptyExtdener
                    android:id="@+id/pokemonRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/emptyRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#FFB71C1C"
                android:textSize="48sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </android.widget.RelativeLayout>
    </android.widget.RelativeLayout>


</android.widget.FrameLayout>
